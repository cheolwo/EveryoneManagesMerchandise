@using BusinessData.ofAccount.ofModel
@using BusinessLogic.ofManager.ofGeneric
<div class=col-8>
	<MudDivider></MudDivider>
	<MudDivider></MudDivider>
	<div class=col-6>
		<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick=SearchBusinssUserByNumber>사업자찾기</MudButton>
		<MudTextField @bind-Value="BusinessNumber" Label="사업자등록번호"></MudTextField>
	</div>
</div>
@if (BusinessUser != null)
{
	<MudText>@BusinessUser.Name</MudText>
}

@code {
	public BusinessUser? BusinessUser { get; set; }
	[Parameter] public EventCallback<string> EventSearchBusinessUserByNumber { get; set; }
	protected override void OnInitialized()
	{
		BusinessUser = new();
	}
	public string? BusinessNumber { get; set; }
	public async Task SearchBusinssUserByNumber()
	{
		if (BusinessNumber != null)
		{
			await EventSearchBusinessUserByNumber.InvokeAsync(BusinessNumber);
		}
	}
}